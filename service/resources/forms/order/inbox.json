{
	"index": [{
			"type": "filter",
			"fields": {
				"tarih": { "text": "Tarih", "type": "dateRange" },
				"profileId.value": { "text": "Senaryo", "type": "lookup", "staticValues": "orderProfileIdList", "col": 2 },
				"orderTypeCode.value": { "text": "Tipi", "type": "lookup", "staticValues": "orderTypeCodeList", "col": 2 }
			}
		},
		{
			"type": "grid",
			"fields": {
				"ID": { "text": "ID", "type": "string", "visible": false },
				"orderNo": { "text": "Sip. No", "type": "string", "html": "<b>{ID}</b><br>{localDocumentId}", "width": "140px" },
				"tarih": { "text": "Tarih", "type": "string", "html": "{issueDate}<br><small class=\"text-primary\">{issueTime}</small>", "width": "130px" },
				"musteri": { "text": "Müşteri", "type": "string", "filterField": "partyName", "html": "<b>{party.title}</b><br><small class=\"text-primary\">{party.vknTckn}</small> | Satır:{lineCountNumeric}" },
				"orderStatus": { "text": "Durum", "type": "lookup", "staticValues": "orderStatusTypes" }
			},
			"options": {
				"selection": true,
				"filter": true,
				"buttons": {
					"add": true,
					"edit": true,
					"delete": true,
					"view": false,
					"print": true,
					"copy": true
				}
			},
			"dataSource": {
				"type": "remote",
				"method": "GET",
				"url": "/dbapi/order/inbox",
				"deleteUrl": "/dbapi/order",
				"copyUrl": "/dbapi/order/copy",
				"printUrl": "/dbapi/order/print"
			}
		}
	],
	"form": [{
		"type": "form",
		"fields": {
			"ioType": { "type": "hidden", "value": 1 },
			"baslik": {
				"text": "Belge Bilgileri",
				"fields": {
					"eIntegrator": {
						"text": "Entegratör",
						"type": "remoteLookup",
						"dataSource": {
							"type": "remote",
							"method": "GET",
							"url": "/dbapi/integrators",
							"label": "{name}"
						},
						"col": "col-sm-6 col-md-3",
						"lastRecord": true
					},
					"ID.value": { "text": "Belge No(Boş ise otomatik)", "type": "string", "col": "col-sm-6 col-md-3" },
					"uuid.value": { "text": "ETTN(uuid)", "type": "string", "readonly": true, "col": "col-sm-6 col-md-3" },
					"divsor1": { "type": "w-100" },
					"issueDate.value": { "text": "Tarih", "type": "date", "col": 3 },
					"issueTime.value": { "text": "Saat", "type": "time", "col": 3 },
					"profileId.value": { "text": "Senaryo", "type": "lookup", "staticValues": "orderProfileIdList", "lastRecord": true, "col": 3 },
					"orderTypeCode.value": { "text": "Tipi", "type": "lookup", "staticValues": "orderTypeCodeList", "lastRecord": true, "col": 3 }
				}
			},
			"cari": { "text": "Tedarikçi Bilgileri", "type": "widget", "widget": "vendorParty", "grouped": true, "collapsed": false, "prefix": "sellerSupplierParty.party.", "col": 12 },
			"orderLine": {
				"text": "Satırlar",
				"type": "grid",
				"fields": {
					"ID.value": { "text": "#", "type": "identity", "readonly": true, "width": "50px" },
					"item._id": {
						"text": "Mal/Hizmet",
						"type": "remoteLookup",
						"dataSource": {
							"type": "remote",
							"method": "GET",
							"url": "/dbapi/items?itemType=all",
							"label": "{name.value} {description.value}"
						},
						"lookupTextField": "item.name.value",
						"required": true
					},
					"orderedQuantity.value": { "text": "Miktar", "type": "number", "required": true },
					"orderedQuantity.attr.unitCode": { "text": "Birim", "type": "lookup", "staticValues": "unitCodeList", "required": true, "lastRecord": true },
					"price.priceAmount.value": { "text": "Fiyat", "type": "money", "required": true },
					"lineExtensionAmount.value": { "text": "Tutar", "type": "money", "calc": "Math.round(orderedQuantity.value*price.priceAmount.value*100)/100", "readonly": true },
					"taxTotal.taxSubtotal.0.percent.value": { "text": "Kdv %", "type": "number", "lastRecord": true },
					"taxTotal.taxAmount.value": { "text": "Kdv", "type": "money", "calc": "Math.round(100*(Math.round(orderedQuantity.value*price.priceAmount.value*100)/100)*taxTotal.taxSubtotal[0].percent.value/100)/100", "readonly": true },
					"note": { "text": "Notlar", "type": "string", "visible": false }
				},
				"modal": {
					"tabs": [{
							"text": "Satir bilgileri",
							"fields": {
								"ID.value": { "text": "#", "type": "identity", "readonly": true, "width": "50px" },
								"item._id": {
									"text": "Mal/Hizmet",
									"type": "remoteLookup",
									"dataSource": {
										"type": "remote",
										"method": "GET",
										"url": "/dbapi/items?itemType=all",
										"label": "{name.value} {description.value}"
									},
									"lookupTextField": "item.name.value"
								},
								"orderedQuantity.value": { "text": "Miktar", "type": "number" },
								"orderedQuantity.attr.unitCode": { "text": "Birim", "type": "lookup", "staticValues": "unitCodeList" },
								"price.priceAmount.value": { "text": "Fiyat", "type": "money" },
								"lineExtensionAmount.value": { "text": "Tutar", "type": "money", "calc": "Math.round(orderedQuantity.value*price.priceAmount.value*100)/100", "readonly": true },
								"taxTotal.taxSubtotal.0.percent.value": { "text": "Kdv %", "type": "number" },
								"taxTotal.taxAmount.value": { "text": "Kdv", "type": "money", "calc": "Math.round(100*(Math.round(orderedQuantity.value*price.priceAmount.value*100)/100)*taxTotal.taxSubtotal[0].percent.value/100)/100", "readonly": true }

							}
						},
						{
							"text": "Diğer",
							"fields": {
								"note": {
									"type": "grid",
									"text": "Satır Notları",
									"fields": {
										"value": { "text": "Not", "type": "string" }
									},
									"options": {
										"selection": false,
										"filter": false,
										"confirmBeforeRemove": false,
										"buttons": {
											"add": true,
											"edit": true,
											"delete": true,
											"view": false,
											"print": false,
											"copy": false
										}
									}
								}
							}
						}
					],
					"options": {
						"autocol": true
					}

				},
				"options": {
					"selection": false,
					"filter": false,
					"confirmBeforeRemove": false,
					"buttons": {
						"add": true,
						"edit": true,
						"delete": true,
						"view": false,
						"print": false,
						"copy": false
					}
				},
				"onchange": "toplamlariGuncelle(this)"
			},
			"group1": {
				"text": "Toplamlar",
				"fields": {
					"toplamMiktar": { "text": "Toplam Miktar", "type": "number", "readonly": true, "col": "col-sm-4 offset-sm-8 col-md-2 offset-md-10" },
					"anticipatedMonetaryTotal.lineExtensionAmount.value": { "text": "Toplam Tutar", "type": "money", "readonly": true, "col": "col-sm-4 offset-sm-8 col-md-2 offset-md-10" }
				}
			}
		},
		"options": {
			"mode": "general",
			"isForm": true
		},
		"dataSource": {
			"method": "GET",
			"url": "/dbapi/order"
		},
		"script": [
			"function toplamlariGuncelle(grid){",
			"var toplamMiktar=0",
			"var toplamTutar=0",
			"grid.value.forEach((e)=>{",
			"toplamMiktar+=Number(e.orderedQuantity.value)",
			"toplamTutar+=Number(e.lineExtensionAmount.value)",
			"})",
			"$('#toplamMiktar').val(Math.round(toplamMiktar*1000)/1000)",
			"$('#anticipatedMonetaryTotal_lineExtensionAmount_value').attr('type','text')",
			"$('#anticipatedMonetaryTotal_lineExtensionAmount_value').val(Number(toplamTutar).formatMoney(2))",
			"}"
		]

	}],
	"print": [{
		"type": "html",
		"text": "print data",
		"dataSource": {
			"method": "GET",
			"url": "/dbapi/order/print"
		}
	}],
	"status": [{
		"type": "form",
		"fields": {
			"orderStatus": { "text": "Belge Durumu", "type": "string", "readonly": true },
			"orderErrors": {
				"type": "grid",
				"text": "Hatalar",
				"collapsed": false,
				"fields": {
					"_date": { "text": "Tarih Saat", "type": "datetime" },
					"code": { "text": "Kod", "type": "string" },
					"message": { "text": "Açıklama", "type": "string" }
				}
			},
			"islem": {
				"text": "İşlem",
				"type": "group",
				"collapsed": false,
				"fields": {
					"localStatus": { "text": "İşlem Durum", "type": "string", "readonly": true },
					"localErrors": {
						"type": "grid",
						"text": "İşlem Hataları",
						"fields": {
							"_date": { "text": "Tarih Saat", "type": "datetime" },
							"code": { "text": "Kod", "type": "string" },
							"message": { "text": "Açıklama", "type": "string" }
						}
					}
				}
			}
		},
		"dataSource": {
			"method": "GET",
			"url": "/dbapi/order"
		}
	}]
}